<DocsHero/>

<div class="docs-bg-white docs-container docs-w-full long-container">
  <DocsDemo as |demo|>
    <demo.example @name="did-intersect.hbs">
      <p
        class="intersection-box"
        {{did-intersect onEnter=this.onEnteringIntersection}}
      >
        Number of times this box has intersected the screen: {{this.numIntersections}}
      </p>
    </demo.example>
    {{demo.snippet "did-intersect.hbs" label="plain example.hbs"}}

    <demo.example @name="did-intersect-with-max-enter.hbs">
      <pre
        class="intersection-box"
        {{did-intersect onEnter=this.onEnteringIntersectionWithMaxEnter maxEnter=this.maxIntersections}}
      >
        Number of times this box has intersected the screen: {{this.numIntersectionsWithMaxEnter}}

        The max limit of enter intersection callbacks on this box: {{this.maxIntersections}}
      </pre>
    </demo.example>
    {{demo.snippet "did-intersect-with-max-enter.hbs" label="example with max enter.hbs"}}

    <demo.example @name="did-intersect-with-is-observing.hbs">
      <div
        class="intersection-box"
        {{did-intersect
          isObserving=this.isObserving
          onEnter=this.onEnteringWithIsObserving
        }}
      >
        <p>Number of times this box has intersected the screen: {{this.numIntersectionsWithIsObserving}}</p>

        <p>isObserving: {{this.isObserving}}</p>

        <button type='button' class="action-button" {{on "click" this.toggleIsObserving}}>
          {{if this.isObserving "Stop" "Start"}} observing
        </button>
      </div>
    </demo.example>
    {{demo.snippet "did-intersect-with-is-observing.hbs" label="example with isObserving.hbs"}}

    <demo.example @name="scroll-into-view.hbs">
      <div
        class="scroll-into-view"
        {{scroll-into-view shouldScroll=this.shouldScrollIntoView}}
      >
        <button type="button" class="action-button" {{on "click" this.onScrollIntoViewTrigger}}>
          Trigger Scroll-into-view on click
        </button>
      </div>
    </demo.example>
    {{demo.snippet "scroll-into-view.hbs" label="scroll-into-view example.hbs"}}
  </DocsDemo>

</div>

